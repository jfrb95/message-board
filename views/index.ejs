<section class="section-container">
  <h1>Welcome to The Message Board</h1>
</section>

<section class="section-container">
  <% if (locals.user) { %>
    <h2>Welcome back, <%= user.username %></h2>
    <a href="/users/log-out">Log Out</a>

    <p>Want to become a member? <a href="/users/membership">Apply Here</a></p>
  <% } else { %>
  
    <a href="/users/log-in">Log in here</a>
  
    <a href="/users/sign-up">Sign up here</a>
  
  <% } %>
</section>

<%- contentFor('title') %> The Message Board